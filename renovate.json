{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":timezone(Asia/Tokyo)",
    ":prHourlyLimitNone"
  ],
  "schedule": [
    "at any time"
  ],
  "reviewers": [
    "@mom0tomo"
  ],
  "automerge": true,
  "packageRules": [
    {
      "groupName": "hugo",
      "matchPackagePatterns": [
        "hugo"
      ],
      "matchUpdateTypes": [
        "major",
        "minor"
      ]
    }
  ]
}
